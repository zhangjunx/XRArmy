<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>消息查看</title>
  <meta name="renderer" content="webkit">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
  <link rel="stylesheet" href="../layui/css/layui.css" media="all">
  <link rel="stylesheet" href="../css/public.css">
  <link rel="stylesheet" href="css/noticeManage.css">
</head>
<body>
	<input type="hidden" id="platform_id">
  <div class="layui-fluid">
	<div class="layui-con">
			<div class="layui-form layuiadmin-card-header-auto">
					<div class="layui-form-item">
						<div class="layui-col-lg4">
							<label class="layui-form-label">主题</label>
							<div class="layui-input-block">
								<input type="text" name="title" id="title"
									autocomplete="off" lay-verify="required" class="layui-input" placeholder="请输入主题" readonly>
							</div>
						</div>
					</div>
					<div class="layui-form-item">
						<div class="layui-col-lg4">
							<label class="layui-form-label">内容</label>
							<div class="layui-input-block">
								<textarea name="content" id="content" placeholder="请输入内容" class="layui-textarea" readonly></textarea>
							</div>
						</div>
					</div>
					<div class="layui-form-item">
						<div class="layui-col-lg4">
							<label class="layui-form-label">接收人</label>
							<div class="layui-input-block" id="receiver" style="line-height:38px">
							</div>
						</div>
					</div>
					<div class="layui-form-item">
						<div class="layui-col-lg4">
							<label class="layui-form-label">发布人</label>
							<div class="layui-input-block">
								<input type="text" name="informer" id="informer"
									autocomplete="off" lay-verify="required" class="layui-input" placeholder="" readonly>
							</div>
						</div>
					</div>
			</div>
		</div>
  </div>
   <script src="../js/path.js"></script>
   <script src="../js/jquery.min.js"></script>  
   <script src="../js/jquery-cookie.js"></script>  
   <script src="../layui/layui.js"></script>
   <script src="js/notice_watch.js"></script>
</body>
</html>