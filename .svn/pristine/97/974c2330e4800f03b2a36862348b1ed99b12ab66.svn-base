<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>人事资料</title>
  <meta name="renderer" content="webkit">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
  <link rel="stylesheet" href="../layui/css/layui.css" media="all">
  <link rel="stylesheet" href="../css/public.css">
  <link rel="stylesheet" href="css/peopleManage.css">
</head>
<body>
  <div class="layui-fluid">
	  <div class="main-tab">
		  <div class="label fl curr" data-id="1">
			  <a href="javascript:;">现役军人</a>
		  </div>
		  <div class="label fl" data-id="2">
		  	   <a href="javascript:;">其他人员</a>
		  </div> 
		  <div class="btn-box fr">
		      <div class="subbtn fl">
				  <a href="javascript:;" class="layui-bg-blue add"  id="getPeople" data-id="同步查询人员">同步查询人员</a>
			  </div>
			  <div class="subbtn fl">
				  <a href="javascript:;" class="layui-bg-blue add"  id="addPeople" data-id="同步添加人员">同步添加人员</a>
			  </div>
			  <div class="subbtn fl">
				  <a href="javascript:;" class="layui-bg-blue add"  id="editPeople" data-id="同步修改人员">同步修改人员</a>
			  </div>
			  <div class="subbtn fl">
				  <a href="javascript:;" class="layui-bg-blue add"  id="delPeople" data-id="同步删除人员">同步删除人员</a>
			  </div>
			  <div class="subbtn fl">
				  <a href="javascript:;" class="layui-bg-blue add"  id="addFace" data-id="下发人脸权限">下发人脸权限</a>
			  </div>
			  <div class="subbtn fl">
				  <a href="javascript:;" class="layui-bg-blue add" id="delFace" data-id="删除人脸权限">删除人脸权限</a>
			  </div>
			  <div class="subbtn fl">
				  <a href="javascript:;" class="layui-bg-blue add" id="add" data-id="新增">新增</a>
			  </div>
			  <div class="subbtn fl">
				  <a href="javascript:;" class="layui-bg-blue" id="import">导入</a>
			  </div>
			   <div class="subbtn fl">
				  <a href="javascript:;" class="layui-bg-blue" id="export">导出</a>
			  </div>
			  <div class="subbtn fl">
				  <a href="javascript:;" class="layui-bg-green" id="print">打印</a>
			  </div>
			  
		  </div>
	  </div>
	  <!-- 现役军人 -->
    <div class="layui-con">
      <div class="layui-form layuiadmin-card-header-auto">
        <div class="layui-form-item">
          <div class="layui-inline">
		    <label class="layui-form-label">军人证号</label>
		    <div class="layui-input-block">
		      <input type="text" name="holderno" id="holderno" placeholder="请输入" autocomplete="off" class="layui-input">
		    </div>
		  </div>
          <div class="layui-inline">
            <label class="layui-form-label">姓名</label>
            <div class="layui-input-block">
              <input type="text" name="name" id="holdername" placeholder="请输入" autocomplete="off" class="layui-input">
            </div>
          </div>
		  <div class="layui-inline">
		    <label class="layui-form-label">所属单位</label>
		    <div class="layui-input-block">
		      <input type="text" name="unitname" id="unitname" placeholder="请输入" autocomplete="off" class="layui-input">
		    </div>
		  </div>
		  
		  <div class="layui-inline">
		    <label class="layui-form-label">入伍日期</label>
		    <div class="layui-input-block">
		      <input type="text" name="date1" id="date" placeholder="请输入" autocomplete="off" class="layui-input date">
		    </div>
		  </div>
          <div class="layui-inline">
            <button class="layui-btn layuiadmin-btn-useradmin layui-bg-blue" id="LAY-user-front-search" lay-submit lay-filter="LAY-user-front-search">
              <i class="layui-icon layui-icon-search layuiadmin-button-btn"></i>
            </button>
          </div>
        </div>
      </div>
      <div class="layui-card-body">
        <table id="LAY-user-manage" lay-filter="LAY-user-manage"></table>
      </div>
    </div>
    <!-- 其他人员 -->
    <div class="layui-con" style="display:none">
      <div class="layui-form layuiadmin-card-header-auto">
        <div class="layui-form-item">
          <div class="layui-inline">
            <label class="layui-form-label">姓名</label>
            <div class="layui-input-block">
              <input type="text" name="name" id="holdername2" placeholder="请输入" autocomplete="off" class="layui-input">
            </div>
          </div>
		  <div class="layui-inline">
		    <label class="layui-form-label">所属单位</label>
		    <div class="layui-input-block">
		      <input type="text" name="unitname" id="unitname2" placeholder="请输入" autocomplete="off" class="layui-input">
		    </div>
		  </div>
		  <div class="layui-inline">
		    <label class="layui-form-label">身份证号</label>
		    <div class="layui-input-block">
		      <input type="text" name="idcode" id="idcode" placeholder="请输入" autocomplete="off" class="layui-input">
		    </div>
		  </div>
		  <div class="layui-inline">
		    <label class="layui-form-label">录入日期</label>
		    <div class="layui-input-block">
		      <input type="text" name="date" id="date2" placeholder="请输入" autocomplete="off" class="layui-input date">
		    </div>
		  </div>
          <div class="layui-inline">
            <button class="layui-btn layuiadmin-btn-useradmin layui-bg-blue" lay-submit lay-filter="otherPeople">
              <i class="layui-icon layui-icon-search layuiadmin-button-btn"></i>
            </button>
          </div>
        </div>
      </div>
      <div class="layui-card-body">
        <table id="LAY-other-manage" lay-filter="LAY-other-manage"></table>
      </div>
    </div>
    
    
    
  </div>
  <!-- 设置权限弹出层 -->
  <div class="layerBox" id="layerBox" style="display: none;">
	  <ul class="permissionSet">
		  <!-- <li>权限组1</li>
		  <li>权限组2</li> -->
	  </ul>
  </div>
  <!-- 退伍弹出层 -->
   <div class="layui-form layuiadmin-card-header-auto" style="display: none;" id="retireBox">
	   <div class="layui-form-item">
	        <!-- <div class="layui-inline">
	          <label class="layui-form-label">退伍日期</label>
	          <div class="layui-input-block">
	            <input type="text" name="personnel_name" id="personnel_name" placeholder="请输入" autocomplete="off" class="layui-input">
	          </div>
	       </div> -->
		  <div class="layui-inline" style="margin-top:20px;width:60%">
		    <label class="layui-form-label">退伍原因</label>
		    <div class="layui-input-block">
		      <textarea name="reason" id="reason" placeholder="请输入" class="layui-textarea"></textarea>
		    </div>
		  </div>
      </div>
    </div>
    <!-- 人员调动弹出层 -->
    <div class="layui-form layuiadmin-card-header-auto" style="display: none;" id="peopleTransfer">
	   <div class="layui-form-item">
	      <div class="layui-inline" style="margin-top:20px;width:60%">
		    <label class="layui-form-label"><span class="must">*</span>调入单位</label>
		    <div class="layui-input-block">
		      <div class="layui-unselect layui-form-select downpanel">
					<div class="layui-select-title ">
						<span class="layui-input layui-unselect" style="line-height:38px" id="unitname3"></span>
						<input type="hidden" id="unitno" >
						<i class="layui-edge"></i>
					</div>
					<dl class="layui-anim layui-anim-upbit">
						<dd style="overflow:visible">
							<ul id="classtree" class="input"></ul>
						</dd>
					</dl>
				</div>
		    </div>
		  </div>
		  <div class="layui-inline" style="margin-top:20px;width:60%">
		    <label class="layui-form-label"><span class="must">*</span>调动原因</label>
		    <div class="layui-input-block">
		      	<input type="text" name="reason" id="reason2" placeholder="请输入" autocomplete="off" class="layui-input">
		    </div>
		  </div>
		   <div class="layui-inline" style="margin-top:20px;width:60%">
			    <label class="layui-form-label">调动资料</label>
			    <div class="layui-input-block">
			      	<img src="../img/add_img.png" class="carImg" id="scenePhoto" style="width: 102px;height: 102px;object-fit: cover;">
					<input type="file" class="peopleImg" id="sceneFile" title="点击更换图片" accept=".jpg,.png,.gif">
			    </div>
		  </div>
      </div>
    </div>
    
   <script src="../js/path.js"></script>
   <script src="../js/jquery.min.js"></script>  
   <script src="../js/jquery-cookie.js"></script>
   <script src="../layui/layui.js"></script>
   <script src="../layui/layui.js"></script>
   <script src="../js/print.js"></script>
   <script src="js/peopleManage.js"></script>
</body>
</html>