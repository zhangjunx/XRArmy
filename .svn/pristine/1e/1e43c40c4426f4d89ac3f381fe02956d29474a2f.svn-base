<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>访客登记</title>
  <meta name="renderer" content="webkit">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
  <link rel="stylesheet" href="../layui/css/layui.css" media="all">
  <link rel="stylesheet" href="../css/public.css">
  <link rel="stylesheet" href="css/visitorRegister.css">
</head>
<body>
	<div class="layui-fluid">
		<div class="layui-con">
			<div class="layui-form layuiadmin-card-header-auto">
				<div class="titleInfo">
					访客信息
				</div>
					<div class="layui-form-item">
						<div class="layui-col-lg1">
							<div class="layui-input-block" style="text-align:center;margin-left: 0;">
								<img src="../img/add_img.png" class="schoolImg" id="img" style="width: 102px;height: 102px;object-fit: cover;">
								<p class="imgText">证件照</p>
							</div>
						</div>
						<div class="layui-col-lg1" style="text-align: center;width: auto;margin-top: 15px;">
							<div class="circle layui-bg-blue">
								人证比对
							</div>
						</div>
						<div class="layui-col-lg1">
							<div class="layui-input-block" style="text-align: center;margin-left: 0;">
								<img src="../img/add_img.png" class="schoolImg" id="scenePhoto" style="width: 102px;height: 102px;object-fit: cover;">
								<p class="imgText">现场照</p>
							</div>
						</div>
					</div>
					<div class="layui-form-item">
						<div class="layui-col-lg4">
							<label class="layui-form-label">证件类型</label>
							<div class="layui-input-block">
								<!-- <select name="idtype" id="idtype" lay-verify="required">
									<option value="身份证">身份证</option>
									<option value="护照">护照</option>
									<option value="驾照">驾照</option>
									<option value="社保卡">社保卡</option>
								</select> -->
							<input type="text" name="idtype" id="idtype"
									autocomplete="off" lay-verify="required" class="layui-input"  readonly>
							</div>
						</div>
					</div>
					<div class="layui-form-item">
						<div class="layui-col-lg4">
							<label class="layui-form-label">证件号码</label>
							<div class="layui-input-block">
								<input type="text" name="idcode" id="idcode"
									autocomplete="off" lay-verify="required" class="layui-input" placeholder="请输入证件号码" readonly>
							</div>
						</div>
						<div class="layui-col-lg4">
							<label class="layui-form-label">姓名</label>
							<div class="layui-input-block">
								<input type="text" name="visitorsname"
									autocomplete="off" lay-verify="required" id="visitorsname" class="layui-input" placeholder="请输入姓名" readonly>
							</div>
						</div>
						<div class="layui-col-lg4">
							<label class="layui-form-label">性别</label>
							<div class="layui-input-block" id="sexname">
								<input type="radio" name="sexname" value="男" title="男" checked>
								<input type="radio" name="sexname" value="女" title="女">
							</div>
						</div>
					</div>
					<div class="layui-form-item">
					    <div class="layui-col-lg4">
							<label class="layui-form-label">联系电话</label>
							<div class="layui-input-block">
								<input type="text" name="phone" id="phone"
									autocomplete="off" lay-verify="required" class="layui-input"  readonly>
							</div>
						</div>
						<div class="layui-col-lg4">
							<label class="layui-form-label">车牌号码</label>
							<div class="layui-input-block">
								<input type="text" name="carplateno" id="carplateno"
									autocomplete="off" lay-verify="required" class="layui-input" placeholder="请输入车牌号" readonly>
							</div>
						</div>
						<div class="layui-col-lg4">
							<label class="layui-form-label">来访事由</label>
							<div class="layui-input-block">
								<!-- <select name="visitorsreason" id="visitorsreason" lay-verify="required">
									<option value="">请选择</option>
									<option value="4">公事</option>
								</select> -->
							<input type="text" name="visitorsreasontext" id="visitorsreasontext"
									autocomplete="off" lay-verify="required" class="layui-input"  readonly>
							</div>
						</div>
					</div>
					<div class="layui-form-item">
						<div class="layui-col-lg4">
							<label class="layui-form-label"><span class="must"></span>通行权限组</label>
							<div class="layui-input-block">
								<!-- <select name="groupid" id="groupid">
							     	<option value="">请选择</option>
									<option value="1">来访</option>
									<option value="4">公事</option> 
								</select> -->
								<input type="text" name="groupid" id="groupid"
									autocomplete="off" class="layui-input"  readonly>
							</div>
						</div>
						
						<div class="layui-col-lg4">
							<label class="layui-form-label">开始时间</label>
							<div class="layui-input-block">
								<input type="text" name="startdate" id="startdate"
									autocomplete="off"  class="layui-input date" placeholder="开始时间：年月日时分秒" readonly>
							</div>
						</div>
						
						<div class="layui-col-lg4">
							<label class="layui-form-label">结束时间</label>
							<div class="layui-input-block">
								<input type="text" name="enddate" id="enddate"
									autocomplete="off"  class="layui-input date" placeholder="结束时间：年月日时分秒" readonly>
							</div>
						</div>
					</div>
					
					<div class="titleInfo" style="margin-top: 60px;">
						被访人信息
					</div>
					<div class="layui-form-item">
						<div class="layui-col-lg4">
							<label class="layui-form-label">所属单位</label>
							<div class="layui-input-block">
								<!-- <select name="unitname" id="unitname" lay-verify="required" lay-search>
									<option value="">请选择</option>
								</select> -->
							<input type="text" name="unitname" id="unitname"
									autocomplete="off" lay-verify="required" class="layui-input"  readonly>
							</div>
						</div> 
						<div class="layui-col-lg4">
							<label class="layui-form-label">姓名</label>
							<div class="layui-input-block">
								<!-- <select name="receiverpeopleid" id="receiverpeopleid" lay-verify="required" lay-search>
									<option value="">请选择</option>
								</select> -->
							<input type="text" name="receiversname" id="receiversname"
									autocomplete="off" lay-verify="required" class="layui-input"  readonly>
							</div>
						</div>
						 
					</div>
					<div class="layui-form-item">
						<div class="layui-col-lg4">
							<label class="layui-form-label">联系电话</label>
							<div class="layui-input-block">
								<input type="text" name="receiversphone" id="receiversphone"
									autocomplete="off" lay-verify="required" class="layui-input"  readonly>
							</div>
						</div>
					</div>
			</div>
		</div>
	</div>
	</div>
	<script src="../js/path.js"></script>  
	<script src="../js/jquery.min.js"></script>  
	<script src="../js/jquery-cookie.js"></script> 
    <script src="../layui/layui.js"></script>
    <script src="js/visitorRecord_detail.js"></script>
</body>
</html>