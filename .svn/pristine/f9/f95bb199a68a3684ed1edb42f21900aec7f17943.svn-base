//创建人员,发布对象
function createObjects(arr){
	for(var item of arr){
		if($("#approver li[data-userid="+item.userid+"]").length == 0){
			var $li=$("<li class='approver-item' data-userid="+item.userid+">"+item.username+"</li>");
			$("#approver").append($li);
		}
	}
}


