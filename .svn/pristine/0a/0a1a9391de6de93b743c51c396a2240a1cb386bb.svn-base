<!DOCTYPE html>
<html style="height: 100%;">
<head>
  <meta charset="utf-8">
  <title>权限设置</title>
  <meta name="renderer" content="webkit">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
  <link rel="stylesheet" href="../layui/css/layui.css" media="all">
  <link rel="stylesheet" href="../css/public.css">
  <link rel="stylesheet" href="css/systemManage.css">
</head>
<body style="height: 100%;">
  <div class="layui-fluid" style="height: 100%;">
  	 <div class="main-tab">
	  		  <div class="label fl curr">
	  			  <a href="javascript:;">菜单管理</a>
	  		  </div>
	  </div>
    <div class="layui-con" style="height: 100%;">
		<div class="layui-row" style="height: 100%;">
			<table id="permissionTab" lay-filter="permissionTab" style="width: 100%;"></table>
		</div>
    </div>
  </div>
  
    <!-- 新增菜单 -->
	<div id="menu_add_update" class="layui-form" style="display: none;padding: 20px 30px 0 0;">
		<input type="hidden" id="fid">
		<input type="hidden" id="parentid">
		<!-- 新增菜单 -->
		<div class="search-box" id="add_menu">
			<div class="layui-form-item">
				<div class="layui-col-lg6">
					<label class="layui-form-label">菜单名称</label>
					<div class=layui-input-block>
						<input type="text" name="name"  id="title1" placeholder="" class="layui-input" autocomplete="off" />
					</div>
				</div>
			</div>
			<div class="layui-form-item">
				<div class="layui-col-lg6">
					<label class="layui-form-label">是否页面</label>
					<div class=layui-input-block>
						<select name="level" class="ifPage">
							<option value="1">否</option>
							<option value="2">是</option>
						</select>
					</div>
				</div>
			</div>
			<div class="layui-form-item">
				<div class="layui-col-lg6">
					<label class="layui-form-label">大屏显示</label>
					<div class=layui-input-block>
						<select name="ifscreen" class="ifScreenFull">
							<option value="0">否</option>
							<option value="1">是</option>
						</select>
					</div>
				</div>
			</div>
			<div class="layui-form-item">
				<div class="layui-col-lg6">
					<label class="layui-form-label">父级名称</label>
					<div class=layui-input-block>
						<input type="text" name="parentid" id="parentName1" placeholder=""
						class="layui-input" readonly  autocomplete="off"/>
					</div>
				</div>
			</div>
			<div class="layui-form-item">
				<div class="layui-col-lg6">
					<label class="layui-form-label">图标</label>
					<div class="layui-input-block">
						<input type="text" name="iconsrc"  id="iconsrc" placeholder=""
						class="layui-input" autocomplete="off"/>
					</div>
				</div>
			</div>
			<div class="layui-form-item">
				<div class="layui-col-lg6">
					<label class="layui-form-label">页面路径</label>
					<div class=layui-input-block>
						<input type="text" name="menuurl"  id="modelPath" placeholder=""
						class="layui-input" autocomplete="off"/>
					</div>
				</div>
			</div>
		</div>
			<!-- 新增按钮 -->
		<div class="search-box" style="border:none" id="add_button">
			<div class="layui-form-item">
				<div class="layui-col-lg6">
					<label class="layui-form-label">按钮名称</label>
					<div class=layui-input-block>
						<input type="text" name="name"  id="title3" placeholder=""
						class="layui-input" autocomplete="off"/>
					</div>
				</div>
			</div>
			<div class="layui-form-item">
				<div class="layui-col-lg6">
					<label class="layui-form-label">按钮编码</label>
					<div class=layui-input-block>
						<input type="text" name="code" id="code3" placeholder=""
						class="layui-input" autocomplete="off"/>
					</div>
				</div>
			</div>
			<div class="layui-form-item">
				<div class="layui-col-lg6">
					<label class="layui-form-label">归属页面</label>
					<div class=layui-input-block>
						<input type="text" name="parentid" id="parentName3" placeholder=""
						class="layui-input" readonly autocomplete="off"/>
					</div>
				</div>
			</div>
		</div>
	</div>
  
   <script src="../js/path.js"></script>
   <script src="../js/jquery.min.js"></script>  
    <script src="../js/jquery-cookie.js"></script>  
   <script src="../layui/layui.js"></script>
   <script src="js/menuManage.js"></script>
</body>
</html>