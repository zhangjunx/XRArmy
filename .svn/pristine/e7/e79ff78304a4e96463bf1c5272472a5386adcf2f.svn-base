			if(iostatus.equals("11")){
				iostatus="1";
			}if(iostatus.equals("12")){
				iostatus="2";
			}else{
				iostatus="0";
			}
			reqEntity.addPart("device_direction", new StringBody(iostatus));
			String result= fordata(url, reqEntity);;
			System.out.println(result);
			m1=JSONObject.parseObject(result);
			data.add(m1);
		}
		map.put("data", data);
		return map;
	}
	
	
