var exportData;
layui.use(["form","table"],function(){
	 var $ = layui.$,
	  form = layui.form,
	  table = layui.table;
	 
	 // 导出
	  $("#export").click(function(){
		  table.exportFile("LAY-user-manage",exportData, "xls");
     })
	
	  //监听搜索
	  form.on('submit(LAY-user-front-search)', function(data){
	    var field = data.field;
	    //执行重载
	    table.reload('LAY-user-manage', {
	      where: field
	    });
	  });
	  
	  
      
	  table.render({
		    elem: '#LAY-user-manage',
		    url:url+'/UserData/getList',
		    cellMinWidth: 80,
		    height: "full-232",
			method:"POST",
			title:"用户管理",
		    request:{
		    	pageName:"curpage",
		    	limitName:"pagesize",
		    },
		    parseData: function(res){ //res 即为原始返回的数据
		    	console.log(res);
		        return {
		          "code": res.flag==true?"0":"", //解析接口状态
		          "msg": res.reason, //解析提示文本
		          "count": res.count, //解析数据长度
		          "data": res.result //解析数据列表
		        };
		      },
		    cols:  [[
		    	  {field:'ID', title:'序号', width:150,sort:true,templet:function(d){
					  return d.LAY_TABLE_INDEX+1
				  }},
				  {field:'userid', title:'账号', width:150,sort:true},
				  {field:'username', title:'用户名', width:150},
				  {field:'unitname', title:'所属单位', width:150,sort:true},
			      {field:'rolename', title:'角色', width:150,sort:true},
				  {field:'deleted', title:'状态', width:150,sort:true,templet:function(d){
					  if(d.deleted == 0){
						  return "已启用";
					  }else if(d.deleted == 1){
						  return "已禁用";
					  }				
				  }},
			      {fixed: 'right', title:'操作', templet:function(d){
			    	  if(d.deleted==0){
			    		  var t="锁定";
			    	  }else{
			    		  var t="解锁";
			    	  }
			    	  var $a1="<a class='layui-btn layui-btn-normal layui-btn-xs' lay-event='enable'>"+t+"</a>";
					  var $a2="<a class='layui-btn layui-btn-normal layui-btn-xs' lay-event='edit'>编辑</a>";
					  var $a3="<a class='layui-btn layui-btn-danger layui-btn-xs' lay-event='del'>删除</a>";
					  var $a4="<a class='layui-btn layui-btn-warm layui-btn-xs' lay-event='repassword'>重置密码</a>";
					  return $a1+$a2+$a3+$a4;
				  }},
			    ]],
		      page: true,
			  limit:15,
			  limits:[15,20,30,40,50,60,70,80,90],
			  done:function(res,curr,count){
				  exportData=res.data;
			  }
		  });
		  	//监听工具条
		  table.on('tool(LAY-user-manage)', function(obj){
			var data = obj.data;
		   if(obj.event === 'del'){
			  layer.confirm('确定删除?', function(index){
				$.ajax({
					url:url+'/UserData/delete',
					type:"POST",
					data:{"userid":data.userid},
					success:function(res){
						layer.close(index);
						if(res.flag){
							layer.msg(res.reason,{time:1000},function(){
								 obj.del();
							})
						}else{
							layer.msg(res.reason,{time:2000});
						}
					}
				})
			  });
			} else if(obj.event === 'edit'){
				 layer.open({
					 type:2,
					 title:"修改",
					 content:"userManage_add.html?id="+data.userid,
					 area:["90%","91%"],
				 })
			}else if(obj.event === 'repassword'){
				layer.confirm('确定重置密码?', function(index){
					$.ajax({
						url:url+'/UserData/resetPass',
						type:"POST",
						data:{"userid":data.userid,"userpass":"123456"},
						success:function(res){
							layer.close(index);
							console.log(res)
							if(res.flag){
								layer.msg(res.reason,{time:1000},function(){
									window.location.reload();
								})
							}else{
								layer.msg(res.reason,{time:2000});
							}
						}
					})
				  });
			}else if(obj.event === 'enable'){
				var t=$(this).html();
				var deleted="";
				if(t=="锁定"){
					deleted="1";
				}else if(t=="解锁"){
					deleted="0";
				}
				layer.confirm("确定"+t+"?", function(index){
					$.ajax({
						url:url+'/UserData/resetPass',
						type:"POST",
						data:{"userid":data.userid,"deleted":deleted},
						success:function(res){
							layer.close(index);
							console.log(res)
							if(res.flag){
								layer.msg(res.reason,{time:1000},function(){
									window.location.reload();
								})
							}else{
								layer.msg(res.reason,{time:2000});
							}
						}
					})
				  });
			}
		   
		  });
})
