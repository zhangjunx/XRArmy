//获取复选框的值
function getChecked(){
	var obj = document.getElementsByName("carStatus");
	var check_val = "";
	for (k in obj) {
		if (obj[k].checked){
			if(check_val == ""){
				check_val = obj[k].value;
			}else{
				check_val = check_val+","+obj[k].value;
			}
		}
	}
	return check_val;
}